<div class='container'>
    <div class='row'>
        <div class='col-md-6 col-md-offset-3'>
            <div class='text-center'>
                <h1>Create Event</h1>
                <%= render partial: 'layouts/notice' %>
            </div>
            <%= form_for(@event) do |f|%>
                <% if @event.errors.any? %>
                    <div id="error_explanation" class='text-center'>
                    <p><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</p>

                    <ul>
                    <% @event.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                    </div>
                <% end %>
                <div class='form-group'>
                    <div class='form-group'>
                        <%= f.label :title %>
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class='form-group'>
                        <%= f.label :location %>
                        <%= f.text_field :location, class: 'form-control' %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class='form-group'>
                        <%= f.label :description %>
                        <%= f.text_area :description, class: 'form-control' %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class='form-group'>
                        <%= f.datetime_select :date, :ampm => true, :minute_step => 15, class: 'form-control' %>
                    </div>
                </div>
                <%= f.submit 'Create Event', class:'btn btn-default' %>
            <% end %>
        </div>
    </div>
</div>