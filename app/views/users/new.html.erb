<div class='container'>
    <div class='col-md-6 col-md-offset-3'>
        <div class='text-center'>
            <h1>Sign up</h1>
        </div>
        <%= flash.notice %>
        <%= form_for(@user) do |f|%>
            <% if @user.errors.any? %>
                <div id="error_explanation" class='text-center'>
                <p><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>

                <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>
                </div>
            <% end %>
            <div class='form-group'>
                <div class='form-group'>
                    <%= f.label :email %>
                    <%= f.text_field :email, class: 'form-control' %>
                </div>
            </div>
            <div class='form-group'>
                <div class='form-group'>
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
            </div>
            <%= f.submit 'Sign up', class:'btn btn-default' %> <%= link_to 'Log in', new_user_session_path %>
        <% end %>
    </div>
</div>

