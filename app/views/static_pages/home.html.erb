<div class='container'>
    <div class='row'>
        <div class='col-md-6 col-md-offset-3 text-center'>
            <h1>Welcome to My Diary</h1>
            <h3>An EventBrite like app</h3>
            <br />
            <br />
            <% unless logged_in? %>
                <%= link_to 'Sign up', new_user_path, class:'btn btn-default btn-lg' %>
                <%= link_to 'Log in', new_user_session_path, class:'btn btn-default btn-lg' %>
            <% else %>
                <%= link_to 'Your Diary', user_path(current_user), class:'btn btn-default btn-lg' %>
            <% end %>
        </div>
    </div>
</div>